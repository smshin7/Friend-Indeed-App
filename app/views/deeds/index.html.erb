<div class="container-fluid">
<%= render "partials/nav" %>
<%= render "partials/deedmodal" %>
<%= render "partials/deedmodal2" %>


<div class="deed-container">
	<div class="row">

		<!-- Deeds#Index Title Bar-->
		<div class="col-xs-6 text-left">
			<header class="completed-deeds-title"><strong><%= @user.name %>'s</strong> <small>Completed Deeds</small></header>
		</div>

		<!-- "Create deed" and "Back to profile" buttons -->
		<div class="col-xs-6 text-right">
			<% if @user == current_user %>
				<button type="button" class="btn btn-custom" data-toggle="modal" data-target="#deed-modal">Create Deed</button>
			<% end %>
			<%= link_to "Back to profile", user_path(@user), class: "btn btn-custom btn-profile"%>
		</div>
	</div> <!-- Closes title bar -->

	<div class="row">
		<% @deeds.each do |d| %>
		<div class="col-md-4">
			<br>
			<div class="deed-card">
				<div class="deed-body">
					<%= d.body %>
				</div>	

				<div class="deed-option">
					<%#= link_to "edit", edit_user_deed_path(d.user,d), class: "deed-link" %>


					<a class="deed-link" data-toggle="modal" data-target="#deed-modal2" data-remote="<%= edit_user_deed_path(d.user, d) %> #modal-edit-fields">edit</a>

					<!-- <a class="deed-link" data-toggle="modal" data-target="#edit-deed-modal">edit</a> -->
					
					 <span class="link-divider">|</span> 
					 <%= link_to "delete", user_deed_path(d.user, d), method: :delete, data: { confirm: "Are you sure?"}, class: "deed-link" %>
				</div>


				<div class="deed-name">
					<strong><%= d.to_id %></strong>
				</div>	
			</div>
		</div>
		<% end %>
	</div> <!-- Closes Deed card -->

</div> <!-- Closes Deed container -->
</div>
<%#= link_to "edit", edit_user_deed_path(d.user, d), class: "deed-link" %>

