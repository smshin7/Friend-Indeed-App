<!-- Create Deed Modal -->
<div class="modal fade" id="deed-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			
			<div class="modal-header">
				<div class="modal-title" id="myModalLabel">Create Deed</div>
			</div>
			<div class="modal-body">
				<%= form_for @deed, url: user_deeds_path(current_user) do |f| %>

				<div class="form-group">
					<%= f.text_field :to_id, placeholder: "I did a deed for...", class: "form-control id-width" %>
				</div>

				<div class="form-group">
					<%= f.text_area :body, placeholder: "What I did was...", class: "form-control body-width", rows: 6 %>
					<br>
					<%= f.submit "Submit", class: "btn-custom-alt" %> <button type="button" class="btn-custom-alt" data-dismiss="modal">Cancel</button>
				</div>
				<% end %>			
			</div>
		</div>
	</div>
</div>